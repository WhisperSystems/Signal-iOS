#!/usr/bin/env bash
set -x
BIN_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd $BIN_DIR/..

# Pull all translations which are at least 80% complete
tx pull -a --minimum-perc=80

# Pull any *existing* translations regardless of their completion. Once
# supported, we don't want to drop any translations.
tx pull
